<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:background="@color/colorwhitebackground">

        <ImageView

            android:id="@+id/image"
            android:layout_width="200px"
            android:layout_height="180px"
            android:src="@mipmap/ic_launcher"
            android:gravity="center"
            android:scaleType="centerCrop"
            />
<LinearLayout
    android:layout_weight="3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">

        <customfonts.MyTextView


            android:id="@+id/title"
            android:maxLines="2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colortitletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lemon peel Base ball"


            />

    <RatingBar
        android:id="@+id/ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4"
        style="?android:attr/ratingBarStyleSmall"
        android:backgroundTint="@color/ratingbar"
        android:secondaryProgressTint="@color/ratingbar"
        android:progressTint="@color/ratingbar"
        />

</LinearLayout>


        <customfonts.MyTextView
            android:layout_weight="2"
            android:id="@+id/money"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs 250.00"
            android:paddingTop="16dp"
            android:textColor="@color/colorheadtext"
            android:gravity="right"

            />








    </LinearLayout>


</LinearLayout>
