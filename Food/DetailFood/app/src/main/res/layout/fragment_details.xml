             android:layout_marginTop="8dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
             android:textSize="14dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:layout_marginTop="5dp"/>
         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="3 Tbs. vegetable oil"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="8dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
             android:textSize="14dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:layout_marginTop="5dp"/>
         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="2 Tbs. lemon juice"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="8dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:layout_marginTop="5dp"/>
         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="1 Tbs. chopped fresh marjoram"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="8dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:layout_marginTop="5dp"/>
         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="1 clove garlic, peeled"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="8dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:layout_marginTop="5dp"/>

         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="¼ tsp. red pepper flakes"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="8dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>


      </LinearLayout>

    <!--// Nutritional//-->

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#fff"
         android:layout_marginTop="8dp"
         android:orientation="vertical"
         android:padding="10dp">


         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Nutritional Facts"
             android:textColor="@color/colortitletext"
             android:textSize="18dp"
             android:letterSpacing="0.05"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
             />
         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Caloris"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="5dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:padding="8dp"
             android:layout_marginTop="5dp"/>


         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Facts"
             android:textColor="@color/colorheadtext"
             android:layout_marginTop="8dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:padding="8dp"
             android:layout_marginTop="5dp"/>

         <customfonts.MyTextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Protiens"
             android:textSize="14dp"
             android:textColor="@color/colorheadtext"
         android:layout_marginTop="8dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp">
     </customfonts.MyTextView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorbackground"
             android:padding="8dp"
             android:layout_marginTop="5dp"/>

         <customfonts.MyTextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Carbohydrates"
             android:textSize="14dp"
             android:textColor="@color/colorheadtext"
         android:layout_marginTop="8dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp">
     </customfonts.MyTextView>

     </LinearLayout>

     <!--//Delivery//-->

     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="#fff"
     android:layout_marginTop="8dp"
     android:orientation="vertical"
     android:padding="10dp"
         android:layout_marginBottom="12dp">


     <customfonts.MyTextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Delivery Information"
     android:textColor="@color/colortitletext"
     android:textSize="18dp"
         android:letterSpacing="0.05"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
     />

     <customfonts.MyTextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
        android:text="06:00 PM until 10:00 PM "
         android:textColor="@color/colorheadtext"
         android:layout_marginTop="8dp"
         android:textSize="14dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp">

     </customfonts.MyTextView>
     </LinearLayout>

 </LinearLayout>


    </ScrollView>

    <customfonts.MyTextView
        android:id="@+id/addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="14dp"
        android:background="@color/colorbar"
        android:text="ADD TO CART"
        android:textColor="@color/colorgreen"
        android:gravity="center"
        android:textSize="13dp"
        android:letterSpacing="0.02"
        android:textStyle="bold"/>
</RelativeLayout>
