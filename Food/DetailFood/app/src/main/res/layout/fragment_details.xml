<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"

   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"

     android:orientation="vertical">




     <ImageView

         android:layout_width="match_parent"
         android:layout_height="250dp"
         android:scaleType="fitXY"
         android:src="@drawable/phoooto"
         />

     <!--//Description-->


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#fff"
         android:padding="10dp"

         >

         <TextView
             android:id="@+id/description"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="14dp"
             android:letterSpacing="0.04"
             android:lineSpacingExtra="0.5dp"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"

             android:textColor="@color/colortitletext"
             android:text="The watercress sauce used to flavor these sweet potatoes is a twist on classic Argentinian chimichurri sauce, which calls for parsley. "/>
     </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
  android:padding="20dp"

    android:layout_gravity="center"
    android:gravity="center">

    <!--//price //-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:gravity="center"
            android:textSize="15dp"
            android:letterSpacing="0.04"
            android:textColor="@color/colortitletext"/>


        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs 100"
            android:letterSpacing="0.04"
            android:gravity="center"
            android:textColor="@color/colorheadtext"/>
    </LinearLayout>

    <!--//outlet//-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
   >

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outlet"
            android:gravity="center"
            android:textSize="15dp"
            android:letterSpacing="0.04"
            android:textColor="@color/colortitletext"/>


        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Mall"
            android:letterSpacing="0.04"
            android:gravity="center"
            android:textColor="@color/colorheadtext"/>
    </LinearLayout>

   <!--// estimated //-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
     >

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimate"
            android:gravity="center"
            android:textSize="15dp"
            android:letterSpacing="0.04"
            android:textColor="@color/colortitletext"/>


        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 Min"
            android:letterSpacing="0.04"
            android:gravity="center"
            android:textColor="@color/colorheadtext"/>
    </LinearLayout>

  <!--//  rating //-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:textSize="15dp"
            android:textColor="@color/colortitletext"/>

        <RatingBar
            android:id="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4"
            style="?android:attr/ratingBarStyleSmall"
            android:backgroundTint="@color/ratingbar"
            android:secondaryProgressTint="@color/ratingbar"
            android:progressTint="@color/ratingbar"


            />
    </LinearLayout>







</LinearLayout>



<!--//ingredint//-->

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#fff"

         android:orientation="vertical"
         android:padding="10dp"
     >


         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Ingredints"
             android:textColor="@color/colortitletext"
             android:textSize="18dp"
             android:letterSpacing="0.05"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
             />
         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="1 ½ cups packed, trimmed watercress sprigs"
             android:layout_marginTop="8dp"
             android:textColor="@color/colorheadtext"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
             android:textSize="14dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
     android:background="@color/colorbackground"
             android:layout_marginTop="5dp"/>

         <customfonts.MyTextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/colorheadtext"
